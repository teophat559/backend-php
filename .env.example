# PHP App Environment Example
# Copy this file to .env and adjust values for your environment.

# Core
APP_ENV=dev
APP_NAME="Special Program 2025"
APP_URL=http://localhost
TIMEZONE=Asia/Ho_Chi_Minh

# Error/Logging
ERROR_DISPLAY=1
ERROR_LOG_PATH=/var/log/php_errors.log
SESSION_SECURE_COOKIE=0

# CORS
# Comma-separated list of allowed origins. In dev, dynamic origin is allowed.
CORS_ALLOW_ORIGINS=http://localhost,http://127.0.0.1

# Realtime (WebSocket server)
WS_HOST=127.0.0.1
WS_PORT=8090

# Database
DB_TYPE=mysql
DB_HOST=localhost
DB_NAME=specialprogram2025
DB_USER=specialprogram
DB_PASS=
# Set to true to disable DB connection (skips DB in health deep checks)
DB_DISABLED=false

# Admin security
ADMIN_SECURITY_KEY=CHANGE_ME_STRONG_KEY
DATA_ENCRYPTION_KEY=CHANGE_ME_32CHARS_MIN

# Auto-login & Browser automation
ENABLE_AUTO_LOGIN=true

# MoreLogin local API (preferred)
MORELOGIN_BASE_URL=http://127.0.0.1:40000
MORELOGIN_API_ID=
MORELOGIN_API_KEY=

# Legacy/alternative browser API (optional)
BROWSER_API_URL=http://127.0.0.1:40000
BROWSER_API_KEY=
BROWSER_PROFILE_ID=
